<script>
  // رابط الـ API - تأكد تضع الرابط الصحيح هنا
  const apiBase = "https://script.google.com/macros/s/AKfycbzKu4SfqhKb12eop2xbvhvmpFnivSU9aNR7g7JGaKp43FDGVi8vi6oH8n6V-W8IPbT6Hg/exec";

  function showError(message) {
    document.getElementById('result').innerHTML = `<span class="error">❌ ${message}</span>`;
  }

  // عرض بيانات الأتوبيس مع الكراسي والأعضاء
  function showBusResults(busNumber, data) {
    const resultDiv = document.getElementById('result');
    if (data.results && data.results.length > 0) {
      let output = `🚍 بيانات الأتوبيس ${busNumber}:\n\n`;
      data.results.forEach(item => {
        output += `كرسي رقم ${item.seat} - ${item.name} (عضوية: ${item.id})\n`;
      });
      resultDiv.textContent = output;
    } else {
      showError("لا توجد بيانات لهذا الأتوبيس");
    }
  }

  // تحميل بيانات الأتوبيس فقط (لا يبحث عن رقم عضوية)
  function loadBusSeats(busNumber) {
    document.getElementById('result').textContent = "جاري تحميل البيانات...";
    fetch(`${apiBase}?bus=${encodeURIComponent(busNumber)}`)
      .then(res => res.json())
      .then(data => {
        if (data.error) {
          showError(data.error);
        } else {
          showBusResults(busNumber, data);
        }
      })
      .catch(() => {
        showError("حدث خطأ في الاتصال.");
      });
  }

  // عرض نتيجة البحث برقم العضوية
  function showIdResult(data) {
    if (data.error) {
      showError(data.error);
    } else {
      const output = `✅ الاسم: ${data.name}\n🚌 أتوبيس: ${data.bus}\n🪑 كرسي: ${data.seat}`;
      document.getElementById('result').textContent = output;
    }
  }

  // البحث برقم العضوية فقط (لا يبحث عن أتوبيس)
  function searchById() {
    const id = document.getElementById('membership').value.trim();
    if (!id) {
      showError("من فضلك أدخل رقم العضوية");
      return;
    }
    document.getElementById('result').textContent = "جاري البحث...";
    fetch(`${apiBase}?id=${encodeURIComponent(id)}`)
      .then(res => res.json())
      .then(data => {
        showIdResult(data);
      })
      .catch(() => {
        showError("حدث خطأ في الاتصال.");
      });
  }
</script>

